{
  // Floating layout test configuration
  // Single floating workspace without any rules - windows stay where created
  "tiling": {
    "enabled": true,
    "workspaces": [
      {
        "name": "main",
        "layout": "floating",
        "screen": "main"
      }
    ],
    "gaps": {
      "inner": 8,
      "outer": 12
    },
    "floating": {
      "presets": [
        {
          "name": "centered",
          "width": "60%",
          "height": "70%",
          "center": true
        },
        {
          "name": "full",
          "width": "100%",
          "height": "100%",
          "x": 0,
          "y": 0
        },
        {
          "name": "left-half",
          "width": "50%",
          "height": "100%",
          "x": 0,
          "y": 0
        },
        {
          "name": "right-half",
          "width": "50%",
          "height": "100%",
          "x": "50%",
          "y": 0
        },
        {
          "name": "top-half",
          "width": "100%",
          "height": "50%",
          "x": 0,
          "y": 0
        },
        {
          "name": "bottom-half",
          "width": "100%",
          "height": "50%",
          "x": 0,
          "y": "50%"
        }
      ]
    },
    "animations": {
      "enabled": false
    },
    "borders": {
      "enabled": false
    }
  },
  "notunes": {
    "enabled": false
  },
  "menuAnywhere": {

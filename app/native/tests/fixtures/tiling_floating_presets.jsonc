{
  // Tiling configuration with floating presets for integration tests
  "tiling": {
    "enabled": true,
    "workspaces": [
      {
        "name": "main",
        "layout": "floating",
        "screen": "main"
      }
    ],
    "floating": {
      "defaultPosition": "center",
      "presets": [
        {
          "name": "center-half",
          "width": "50%",
          "height": "50%",
          "center": true
        },
        {
          "name": "left-half",
          "width": "50%",
          "height": "100%",
          "x": 0,
          "y": 0
        },
        {
          "name": "right-half",
          "width": "50%",
          "height": "100%",
          "x": "50%",
          "y": 0
        },
        {
          "name": "top-half",
          "width": "100%",
          "height": "50%",
          "x": 0,
          "y": 0
        },
        {
          "name": "bottom-half",
          "width": "100%",
          "height": "50%",
          "x": 0,
          "y": "50%"
        },
        {
          "name": "fixed-size",
          "width": 800,
          "height": 600,
          "center": true
        }
      ]
    },
    "gaps": {
      "inner": 8,
      "outer": 12
    },
    "animations": {
      "enabled": false
    },
    "borders": {
      "enabled": false
    }
  },
  "notunes": {
    "enabled": false
  },
  "menuAnywhere": {
    "enabled": false
  }
}

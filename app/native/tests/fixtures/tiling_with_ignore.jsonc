{
  // Tiling configuration with ignore rules for integration tests
  // TextEdit is ignored (not managed by tiling)
  "tiling": {
    "enabled": true,
    "workspaces": [
      {
        "name": "main",
        "layout": "dwindle",
        "screen": "main"
      }
    ],
    "ignore": [
      { "appId": "com.apple.TextEdit" },
      { "appName": "TextEdit" }
    ],
    "gaps": {
      "inner": 8,
      "outer": 12
    },
    "animations": {
      "enabled": false
    },
    "borders": {
      "enabled": false
    }
  },
  "notunes": {
    "enabled": false
  },
  "menuAnywhere": {
    "enabled": false
  }
}

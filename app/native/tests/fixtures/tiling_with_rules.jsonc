{
  // Tiling configuration with window rules for integration tests
  // Dictionary goes to "code" workspace, TextEdit goes to "docs" workspace
  "tiling": {
    "enabled": true,
    "workspaces": [
      {
        "name": "code",
        "layout": "dwindle",
        "screen": "main",
        "rules": [
          { "appId": "com.apple.Dictionary" },
          { "appName": "Dictionary" }
        ]
      },
      {
        "name": "docs",
        "layout": "split",
        "screen": "main",
        "rules": [
          { "appId": "com.apple.TextEdit" },
          { "appName": "TextEdit" }
        ]
      },
      {
        "name": "general",
        "layout": "floating",
        "screen": "main"
      }
    ],
    "gaps": {
      "inner": 8,
      "outer": 12
    },
    "animations": {
      "enabled": false
    },
    "borders": {
      "enabled": false
    }
  },
  "notunes": {
    "enabled": false
  },
  "menuAnywhere": {
    "enabled": false
  }
}

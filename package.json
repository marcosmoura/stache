{
  "name": "stache",
  "version": "0.12.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:app": "pnpm tauri:build",
    "dev": "vite",
    "format": "pnpm format:ui && pnpm format:rust",
    "format:rust": "cargo fmt --all",
    "format:ui": "NODE_OPTIONS=\"--experimental-strip-types\" prettier --log-level warn -l --write .",
    "lint": "pnpm lint:ui && pnpm lint:rust",
    "lint:rust": "cargo sort --workspace && cargo clippy --workspace --all --fix --allow-dirty --allow-staged -- -D warnings",
    "lint:ui": "pnpm tsgo --noEmit && eslint . --fix && stylelint --formatter verbose --fix --allow-empty-input './app/ui/**/*.(styles.ts|css)'",
    "prepare": "./scripts/prepare-sidecar.sh && husky",
    "release": "./scripts/release.sh",
    "tauri": "tauri",
    "tauri:audit": "cargo audit --target-os macos",
    "tauri:build": "tauri build --config app/native/tauri.conf.json",
    "tauri:dev": "tauri dev --config app/native/tauri.conf.json",
    "test": "pnpm test:ui && pnpm test:rust",
    "test:rust": "cargo nextest run --workspace",
    "test:ui": "vitest run",
    "test:ui:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@tanstack/react-query": "^5.90.16",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-store/zustand": "^1.1.0",
    "immer": "^11.1.3",
    "motion": "^12.26.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.0.3",
    "usehooks-ts": "^3.1.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@linaria/core": "^6.3.0",
    "@styled/typescript-styled-plugin": "^1.0.1",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tauri-apps/cli": "^2.9.6",
    "@tauri-store/shared": "^0.10.2",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.53.0",
    "@typescript/native-preview": "7.0.0-dev.20260113.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-istanbul": "^4.0.17",
    "@wyw-in-js/vite": "1.0.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lightningcss": "^1.30.2",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.21",
    "stylelint": "^16.26.1",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-high-performance-animation": "^1.11.0",
    "stylelint-order": "^7.0.1",
    "stylelint-prettier": "^5.0.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "npm:rolldown-vite@7.3.1",
    "vitest": "^4.0.17",
    "vitest-browser-react": "^2.0.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ],
    "overrides": {
      "braces": "^3.0.3",
      "micromatch": "^4.0.8",
      "postcss": "^8.5.6",
      "trim": "^1.0.1",
      "trim-newlines": "^5.0.0",
      "vite": "npm:rolldown-vite@7.3.1",
      "yargs-parser": "^22.0.0"
    }
  }
}
